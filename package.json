{
  "name": "nodejs-logger",
  "version": "0.1.1",
  "description": "Nodejs logger",
  "main": "build/App.js",
  "repository": {
    "url": "https://github.com/neverovski/nodejs-logger"
  },
  "scripts": {
    "format": "prettier --write \"src/**/*.ts\"",
    "build": "tsc -p tsconfig.build.json",
    "dev": "tsc-watch -p tsconfig.build.json --onSuccess \"node build/index.js\" | pino-pretty",
    "debug": "tsc-watch -p tsconfig.build.json --onSuccess \"node --inspect-brk build/index.js\" | pino-pretty",
    "prod": "npm run build && node build/index.js | pino-pretty"
  },
  "author": "Ontid",
  "license": "ISC",
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "dotenv": "^8.2.0",
    "pino": "^6.7.0",
    "pino-pretty": "^4.3.0"
  },
  "devDependencies": {
    "@types/hapi__joi": "^17.1.6",
    "@types/node": "^14.14.11",
    "@types/pino": "^6.3.4",
    "ts-json-schema-generator": "^0.80.0",
    "ts-node": "^9.1.1",
    "tsc-watch": "^4.2.9",
    "tslint": "^6.1.3",
    "tslint-config-airbnb": "^5.11.2",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.1.2"
  }
}
